{
  "version": "1.2",
  "settings": [
    {
  "id": "time_numb",
  "name": "Time resolution",
  "description": "State the amount of time to which you want to thin the data. Default is 1",
  "type": "DOUBLE",
  "defaultValue": 1
},
{
  "id": "time_unit",
  "name": "Unit",
  "description": "Select unit of time resolution. Default is 'Hour'",
  "type": "DROPDOWN",
  "defaultValue": "ahour",
  "options": [{
      "value": "asecond",
      "displayText": "Second(s)"
    },
    {
      "value": "aminute",
      "displayText": "Minute(s)"
    },
    {
      "value": "ahour",
      "displayText": "Hour(s)"
    },
    {
      "value": "day",
      "displayText": "Day(s)"
    },
    {
      "value": "week",
      "displayText": "Week(s)"
    },
    {
      "value": "month",
      "displayText": "Month"
    }]
}
],

